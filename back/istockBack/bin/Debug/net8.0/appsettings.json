{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Cors": {
    // Valor por defecto para dev; en producción Azure lo sobreescribe con Cors:AllowedOrigins:0 = https://istockapp.netlify.app
    "AllowedOrigins": [ "http://localhost:5173" ]
  },

  "ConnectionStrings": {
    // Dejalo vacío: en Azure se inyecta desde Connection strings (name: CadenaSQL, type: SQLAzure)
    "CadenaSQL": ""
  },

  "Jwt": {
    // Dejalo vacío: en Azure se inyecta con Application Settings (Jwt:Key, Jwt:Issuer, Jwt:Audience)
    "Key": "",
    "Issuer": "istockapp-api",
    "Audience": "istockapp-client"
  }
}
